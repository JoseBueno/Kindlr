<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="org.bueno.jose.kindlr.LoginActivity"
    android:textAlignment="center">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Let&apos;s Go!"
        android:id="@+id/btnLogIn"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:layout_alignLeft="@+id/btnCancel"
        android:layout_alignRight="@+id/btnCancel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="...never mind"
        android:id="@+id/btnCancel"
        android:layout_marginTop="34dp"
        android:layout_below="@+id/btnLogIn"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="In order to ensure that we can not only find the best matches possible for you but also to protect the privacy of our members, we do ask that you log in to your account."
        android:id="@+id/textView"
        android:gravity="center"
        android:layout_marginBottom="29dp"
        android:layout_above="@+id/btnLogIn"
        android:layout_alignParentEnd="true"
        android:textStyle="italic"
        android:textSize="16dp" />
</RelativeLayout>
